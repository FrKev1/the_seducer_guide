{% extends 'admin/admin_layout.html.twig' %}

{% block title %}{{ parent() }} - Admin - L'article{% endblock %}

{% block body %}
    <h1>Détail de l'article</h1>

    <table class="table-show table table-hover">
        <tbody>
            <tr>
                <th scope="col">Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th scope="col">Image</th>
                <td><img src="/assets/images/uploads/{{ article.picture }}"></td>
            </tr>
            <tr>
                <th scope="col">Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th scope="col">Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th scope="col">Contenu</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th scope="col">Date de publication</th>
                <td>{{ article.publicationDate ? article.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th scope="col">Date mis à jour</th>
                <td>{{ article.lastUpdateDate ? article.lastUpdateDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th scope="col">Publier ?</th>
                <td>{{ article.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
        <tfoot>
            <th>
                <a href="{{ path('admin_articles') }}">Retour les articles</a>
            </th>
        </tfoot>
    </table>
    <div class="button-action">
        <a class="btn btn-success" href="{{ path('admin_article_edit', {'id': article.id}) }}">Modifier</a>
        {{ include('admin/article_delete_form.html.twig') }}
    </div>
{% endblock %}
